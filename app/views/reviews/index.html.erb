<h1>Reviews</h1>
<a href="<%= new_review_path %>" class="btn btn-info" role="button">Add New Review</a>
<br><br>

<table class = "table table-hover sortable">
    <tr>
      <th>Restaurant</th>
      <th>When</th>
      <th>Who</th>
      <th>Rating</th>
    </tr>
    <% @reviews.each do |review| %>
    <tr>
      <td> <%= link_to "#{review.restaurant.name}", review_path(review) %> </td>
      <td> <%= link_to "#{review.created_at.strftime("%B %d, %Y")}" %> </td>
      <td> <%= review.user.name %> </td>
      <td> <%= review.rating %> </td>
    </tr>
<% end %>
</table>

